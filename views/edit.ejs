<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs') %>

<body>

    <%- include('partials/header.ejs') %>

    <section class="main">
        <div class="container">

            <ul class="post-list">
                <li class="post-list__item">
                    <% const {title, author, text} = post %>
                    <form action="/edit/<%= post.id %>?_method=PUT" method="post" class="form">
                        <div class="form__top">
                            <div class="form__input-box">
                                <label for="title">Post Title</label>
                                <input type="text" name="title" id="title" required value="<%= title %>">
                            </div>
                            <div class="form__input-box">
                                <label for="author">Author</label>
                                <input type="text" name="author" id="author" required value="<%= author %>">
                            </div>
                        </div>

                        <label for="textarea">Post Text</label>
                        <textarea name="textarea" id="textarea" required><%= text %></textarea>
                        
                        <input type="submit" value="submit" class="button">
                    </form>
                </li>
            </ul>
        </div>
    </section>
</body>

</html>