<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs') %>

<body>

    <%- include('partials/header.ejs') %>

    <section class="main">
        <div class="container">
            <div class="content">
                <h2 class="title mt20">Contacts</h2>
                <ul class="contacts-list">
                    <!-- <% if(contacts.length) {%> -->
                        <% contacts.forEach(({ name, link }) => {%>
                            <li class="contacts-list__item">
                                <a href="<%= link %>" target="_blank" class="contacts-list__link"><%= name %></a>
                            </li>
                        <%})%>
                    <!-- <%}%> -->
                </ul>
            </div>
        </div>
    </section>
</body>

</html>